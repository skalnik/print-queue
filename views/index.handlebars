<div class="user-well">
  {{#if email}}
    <a href="/logout" alt="Sign out">Sign out</a>
  {{ else }}
    <a href="/login" alt="Sign In">Sign In</a>
  {{/if}}
</div>

<form action="/" method="post" class="form-horizontal" role="form">
  <div class="form-group">
    <label for="queue[url][]" class="col-sm-3 control-label">STL URL</label>
    <div class="col-sm-8">
      <input type="text"
             name="queue[url][]"
             class="form-control"
             placeholder="http://thingiverse.com/download:1234" />
    </div>
  </div>
  <div class="form-group">
    <label for="queue[email]" class="col-sm-3 control-label">Email address</label>
    <div class="col-sm-8">
      <input type="text"
             name="queue[email]"
             class="form-control"
             placeholder="example@example.com" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <input class="btn btn-primary" type="submit" value="Add to queue" />
    </div>
  </div>
</form>

<h2>Current Queue</h2>
{{#if queue}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th>When</th>
        <th>URL</th>
        <th>Status</th>
        {{#if ../email}}
          <th></th>
        {{/if}}
      </tr>
    </thead>
    <tbody>
      {{#each queue}}
        <tr>
          <td data-livestamp="{{math timestamp '/' '1000'}}"></td>
          <td>{{url}}</td>
          <td>{{status}} </td>
          {{#if ../../email}}
            <td>
              {{#equal ../../email email}}
                {{#unless queued}}
                  <form class="form-inline" role="form" action="/requestToken" method="post">
                    <input type="hidden" name="itemId" value="{{id}}" />
                    <input type="hidden" name="user" value="{{email}}" />
                    <button type="submit"
                           class="btn btn-danger btn-xs"
                           title="This requires access to the email this was queued with">
                      &times;
                    </button>
                  </form>
                {{/unless}}
              {{/equal }}
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  Queue empty!
{{/if}}
